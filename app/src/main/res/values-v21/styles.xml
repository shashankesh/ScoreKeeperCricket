<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d1ff03</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">#d1ff03</item>
    </style>

    <style name="RunButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:state_pressed">true</item>
        <item name="android:enabled">true</item>
    </style>
    <style name="RunButtonB" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:state_pressed">true</item>
        <item name="android:enabled">true</item>
    </style>
</resources>
